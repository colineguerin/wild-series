{% extends 'base.html.twig' %}

{% block title %}Programs{% endblock %}

{% block body %}
    <h1>All our programs </h1>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / <a href="{{ path("program_show", { id: program.id }) }}">{{ program.title }}</a></h2>
            <h5>Category: {{ program.category.name }}</h5>
            <p>{{ program.synopsis }}</p>
        </div>
    {% else %}
        No program has been found.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Home
    </a>
{% endblock %}

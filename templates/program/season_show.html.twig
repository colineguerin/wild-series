{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Category: {{ program.category.name }}</p>
        </div>
        <div>
            <h2>Season {{ season.number }}</h2>
            <p>Description: {{ season.description }}</p>
            <p>Year: {{ season.year }}</p>
            {% for episode in season.episodes %}
            <ul>
                <li>
                    <h5><a href="{{ path('program_episode_show', {programId: program.id, seasonId: season.id, episodeId: episode.id}) }}">Episode {{ episode.number }}: {{ episode.title }}</a></h5>
                </li>
            </ul>
            {% endfor %}
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        View all programs
    </a>
{% endblock %}